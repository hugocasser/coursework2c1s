<Window x:Class="WpfApp1.MainWindow"
        x:Name="Start"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="MainWindow" ResizeMode="CanMinimize" Height="450" Width="500" Background="GhostWhite">
    
    <Grid>
        <StackPanel>        
        <Button x:Name="ConnectToServer" Content="Connect to Server" Margin="60"  Click="ConnectToServer_OnClick" Height="40" Width="150" />
        <Button x:Name="CreateServer" Content="Create Server" Margin="10" Click="CreateServer_Click" Height="40" Width="150"/>
        <Button x:Name="Exit"  Content="Exit" Margin="60" Height="40" Width="150"  Click="Exit_OnClick"/>
        </StackPanel>
    </Grid>
</Window>